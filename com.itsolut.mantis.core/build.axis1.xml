<?xml version="1.0" ?>
<project name="MylarMantisBinding" default="gen-client-stubs-axis1" basedir=".">
	
	<property name="gen.src.dir" location="src"/>
	<property name="lib.dir" location="lib"/>

	<taskdef name="wsdl2java" classname="org.apache.axis.tools.ant.wsdl.Wsdl2javaAntTask">
		<classpath>
			<fileset dir="${lib.dir}">
				<include name="*.jar"/>
			</fileset>
		</classpath>
	</taskdef>

	<target name="gen-client-stubs-axis1">
		<mkdir dir="${gen.src.dir}"/>
		<wsdl2java
				output="${gen.src.dir}"
		  		testcase="false"
		  		verbose="true"
		  		url="mantisconnect.wsdl">
			<mapping namespace="http://futureware.biz/mantisconnect" package="com.itsolut.mantis.binding"/>
		</wsdl2java>
	</target>

</project>